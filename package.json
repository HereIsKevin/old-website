{
  "name": "hereiskevin.github.io",
  "version": "0.1.0",
  "private": true,
  "description": "Kevin's personal blog and website.",
  "repository": "HereIsKevin/hereiskevin.github.io",
  "license": "UNLICENSED",
  "author": "Kevin Feng",
  "type": "module",
  "scripts": {
    "build": "astro check && tsc --noEmit && astro build",
    "clean": "rimraf ./dist/",
    "format": "prettier --write ./.*.json ./*.{json,ts} ./src/**/*.{ts,css,astro}",
    "lint": "eslint --fix ./*.ts ./src/**/*.{ts,astro} && stylelint --fix ./src/**/*.{css,astro}",
    "preview": "astro preview",
    "start": "astro dev",
    "watch:astro": "astro check --watch",
    "watch:tsc": "tsc --noEmit --watch --preserveWatchOutput"
  },
  "dependencies": {
    "astro": "^2.6.6"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-plugin-astro": "^0.27.1",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.10.0",
    "rimraf": "^5.0.1",
    "stylelint": "^15.8.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^5.1.3"
  }
}
