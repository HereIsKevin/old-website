{
  "name": "hereiskevin.github.io",
  "version": "0.1.0",
  "private": true,
  "description": "Kevin's personal blog and website.",
  "repository": "HereIsKevin/hereiskevin.github.io",
  "license": "UNLICENSED",
  "author": "Kevin Feng",
  "type": "module",
  "scripts": {
    "build": "astro build",
    "check": "npm run check:astro && npm run check:tsc",
    "check:astro": "astro check",
    "check:tsc": "tsc --noEmit",
    "clean": "rimraf ./.astro/ ./dist/",
    "format": "prettier --write ./.*.json ./*.{json,ts,md} ./.github/**/*.yaml ./src/**/*.{ts,css,astro,md,yaml}",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint --fix ./*.ts ./src/**/*.{ts,astro}",
    "lint:stylelint": "stylelint --fix ./src/**/*.{css,astro}",
    "preview": "astro preview",
    "start": "astro dev",
    "watch:astro": "astro check --watch",
    "watch:tsc": "tsc --noEmit --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@fontsource/jetbrains-mono": "^5.0.3",
    "@fontsource/lato": "^5.0.3",
    "astro": "^2.7.1"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-plugin-astro": "^0.27.2",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.10.0",
    "rimraf": "^5.0.1",
    "stylelint": "^15.9.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^5.1.5"
  }
}
