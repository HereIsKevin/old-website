---
import type { HTMLAttributes } from "astro/types"

import "../styles/global.css"

export interface Props extends HTMLAttributes<"footer"> {
  background?: string
  foreground?: string
  border?: string
}

const {
  background = "var(--color-background)",
  foreground = "var(--color-foreground)",
  border = "var(--color-tertiary)",
} = Astro.props
---

<footer {...Astro.props}>
  <p>&copy; 2023 Kevin Feng</p>
</footer>

<style define:vars={{ background, foreground, border }}>
  footer {
    padding: 20px;

    background-color: var(--background);
    color: var(--foreground);
    border-top: 1px solid var(--border);
  }

  p {
    margin: 0;
    text-align: center;
  }
</style>
